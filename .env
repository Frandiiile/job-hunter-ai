# Job Hunter AI Environment Variables
# Copy this file to .env and fill in your actual values

# ======================
# REQUIRED
# ======================

# Groq API Key (get from https://console.groq.com/)
GROQ_API_KEY=your_groq_api_key_here

# Adzuna API (get from https://developer.adzuna.com/)
ADZUNA_APP_ID=your_app_id
ADZUNA_APP_KEY=your_app_key

# ======================
# OPTIONAL
# ======================

# Groq Configuration
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_TEMPERATURE=0.2
GROQ_TIMEOUT=60

# Google Sheets
GOOGLE_SHEETS_SPREADSHEET_NAME=job_pipeline
GOOGLE_SHEETS_WORKSHEET_NAME=daily_jobs

# Google Drive (for uploading generated documents)
# Uncomment and set if you want to enable Drive upload
# GOOGLE_DRIVE_FOLDER_ID=your_folder_id
# GOOGLE_CREDENTIALS_PATH=/path/to/credentials.json
